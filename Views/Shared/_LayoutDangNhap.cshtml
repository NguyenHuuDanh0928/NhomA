<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Trang đăng nhập</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;500;600&display=swap" rel="stylesheet">
    <style>
        * {
            padding: 0;
            margin: 0;
            box-sizing: border-box;
        }

        body {
            background-image: url('/img/Thiết kế chưa có tên (1).png');
            background-size: cover;
            background-position: center;
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            font-family: 'Poppins', sans-serif;
            color: #ffffff;
        }

        .login-container {
            width: 100%;
            max-width: 400px;
            padding: 40px;
            background-color: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            backdrop-filter: blur(10px);
            box-shadow: 0 0 30px rgba(0, 0, 0, 0.5);
            text-align: center;
        }

            .login-container h3 {
                font-size: 24px;
                font-weight: 600;
                margin-bottom: 20px;
                color: #ffffff;
            }

        label {
            font-size: 14px;
            color: #ffffff;
            display: block;
            text-align: left;
            margin-bottom: 5px;
            font-weight: 500;
        }

        .form-control {
            width: 100%;
            padding: 10px;
            margin-bottom: 15px;
            border-radius: 5px;
            border: none;
            background-color: rgba(255, 255, 255, 0.1);
            color: #ffffff;
        }

            .form-control::placeholder {
                color: #d0d0d0;
            }

        .btn-primary {
            width: 100%;
            padding: 12px;
            background-color: #1c87c9;
            color: #ffffff;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: 600;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .btn-primary:hover {
                background-color: #155a8a;
            }

        .text-muted {
            color: #b0b0b0;
            font-size: 14px;
            text-decoration: none;
        }

            .text-muted:hover {
                color: #ffffff;
                text-decoration: underline;
            }
    </style>
</head>
<body>
    <!-- Render nội dung của trang đăng nhập -->
    <div class="login-container">
        @RenderBody()
    </div>
</body>
</html>
