-- Tạo bảng BacSiThuY
CREATE TABLE BacSiThuY (
    Id INT IDENTITY(1,1) PRIMARY KEY,
    TenBacSi NVARCHAR(100) NOT NULL,
    ChuyenMon NVARCHAR(100),
    SoDienThoai VARCHAR(20),
    Email VARCHAR(100)
);

