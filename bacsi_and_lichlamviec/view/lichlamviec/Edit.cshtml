@model WebDichVu.Datas.LichLamViec

@{
    ViewData["Title"] = "Sửa Lịch Làm Việc";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<head>
    <link rel="stylesheet" href="~/css/edit_lichlamviec.css" />
</head>
<div class="container">
    <h2>Sửa Lịch Làm Việc</h2>
    <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="Id" value="@Model.Id" />

        <div class="schedule-group">
            <label for="BacSiThuYid" class="control-label">Bác Sĩ Thú Y</label>
            <select name="BacSiThuYid" id="BacSiThuYid" class="form-control">
                @foreach (var item in (SelectList)ViewData["BacSiThuYid"])
                {
                    <option value="@item.Value" @(item.Value == Model.BacSiThuYid.ToString() ? "selected" : "")>@item.Text</option>
                }
            </select>
            <span class="text-danger">@Html.ValidationMessageFor(model => model.BacSiThuYid)</span>
        </div>

        <div class="schedule-group">
            <label for="Ngay" class="control-label">Ngày</label>
            <input type="date" name="Ngay" id="Ngay" class="form-control" value="@Model.Ngay.ToString("yyyy-MM-dd")" />
            <span class="text-danger">@Html.ValidationMessageFor(model => model.Ngay)</span>
        </div>

        <div class="schedule-group">
            <label for="GioBatDau" class="control-label">Giờ Bắt Đầu</label>
            <input type="time" name="GioBatDau" id="GioBatDau" class="form-control" value="@Model.GioBatDau.ToString(@"hh\:mm")" />
            <span class="text-danger">@Html.ValidationMessageFor(model => model.GioBatDau)</span>
        </div>

        <div class="schedule-group">
            <label for="GioKetThuc" class="control-label">Giờ Kết Thúc</label>
            <input type="time" name="GioKetThuc" id="GioKetThuc" class="form-control" value="@Model.GioKetThuc.ToString(@"hh\:mm")" />
            <span class="text-danger">@Html.ValidationMessageFor(model => model.GioKetThuc)</span>
        </div>

        <div class="schedule-group">
            <label for="TrangThai" class="control-label">Trạng Thái</label>
            <input type="text" name="TrangThai" id="TrangThai" class="form-control" value="@Model.TrangThai" />
            <span class="text-danger">@Html.ValidationMessageFor(model => model.TrangThai)</span>
        </div>

        <div class="buttons">
            <button type="submit" class="save-btn">Lưu</button>
            <a href="@Url.Action("Index", "LichLamViec", new { area = "Admin" })" class="cancel-btn">Hủy</a>
        </div>
    </form>
</div>