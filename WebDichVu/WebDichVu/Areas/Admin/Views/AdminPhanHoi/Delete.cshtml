@model DichVuThuYService.Datas.PhanHoi
@{
    ViewData["Title"] = "Xóa phản hồi";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<link rel="stylesheet" href="~/css/deletefeedback.css" />

<h2>Xóa phản hồi</h2>

<div class="alert alert-danger">
    <h4>Bạn có chắc chắn muốn xóa phản hồi này không?</h4>
    <p>Thông tin phản hồi sẽ bị xóa vĩnh viễn.</p>
</div>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            Id
        </dt>
        <dd class="col-sm-10">
            @Model.Id
        </dd>

        <dt class="col-sm-2">
            Mã Khách Hàng
        </dt>
        <dd class="col-sm-10">
            @Model.KhachHangId
        </dd>

        <dt class="col-sm-2">
            Mã Dịch Vụ
        </dt>
        <dd class="col-sm-10">
            @Model.DichVuId
        </dd>

        <dt class="col-sm-2">
            Nội Dung
        </dt>
        <dd class="col-sm-10">
            @Model.NoiDung
        </dd>

        <dt class="col-sm-2">
            Thời Gian
        </dt>
        <dd class="col-sm-10">
            @Model.ThoiGian.ToString("dd/MM/yyyy HH:mm")
        </dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Xác nhận xóa</button>
        <a asp-action="PhanHoi" class="btn btn-secondary">Hủy</a>
    </form>
</div>
