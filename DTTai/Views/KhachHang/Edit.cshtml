@model WebDichVu.Datas.KhachHang

@{
    ViewData["Title"] = "Chỉnh Sửa Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}

<h1>Chỉnh Sửa Khách Hàng</h1>

<form action="@Url.Action("Edit", "KhachHang", new { area = "Admin", id = Model.Id })" method="post">
    @Html.AntiForgeryToken()

    <div asp-validation-summary="All" class="text-danger"></div>

    <!-- Tên Khách Hàng -->
    <div class="form-group">
        <label asp-for="TenKhachHang" class="control-label">@Html.DisplayNameFor(model => model.TenKhachHang)</label>
        <input asp-for="TenKhachHang" class="form-control" />
        <span asp-validation-for="TenKhachHang" class="text-danger"></span>
    </div>

    <!-- Mật khẩu (Cập nhật nếu cần thiết) -->
    <div class="form-group">
        <label asp-for="Matkhau" class="control-label">@Html.DisplayNameFor(model => model.Matkhau)</label>
        <input asp-for="Matkhau" class="form-control" type="password" />
        <span asp-validation-for="Matkhau" class="text-danger"></span>
    </div>

    <!-- Các trường khác tương tự như khi tạo khách hàng -->
    <div class="form-group">
        <label asp-for="SoDienThoai" class="control-label">@Html.DisplayNameFor(model => model.SoDienThoai)</label>
        <input asp-for="SoDienThoai" class="form-control" />
        <span asp-validation-for="SoDienThoai" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DiaChi" class="control-label">@Html.DisplayNameFor(model => model.DiaChi)</label>
        <input asp-for="DiaChi" class="form-control" />
        <span asp-validation-for="DiaChi" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label">@Html.DisplayNameFor(model => model.Email)</label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GhiChu" class="control-label">@Html.DisplayNameFor(model => model.GhiChu)</label>
        <textarea asp-for="GhiChu" class="form-control"></textarea>
        <span asp-validation-for="GhiChu" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="NgaySinh" class="control-label">@Html.DisplayNameFor(model => model.NgaySinh)</label>
        <input asp-for="NgaySinh" class="form-control" type="date" />
        <span asp-validation-for="NgaySinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="GioiTinh" class="control-label">@Html.DisplayNameFor(model => model.GioiTinh)</label>
        <select asp-for="GioiTinh" class="form-control">
            <option value="true" @(Model.GioiTinh ? "selected" : "")>Nam</option>
            <option value="false" @(!Model.GioiTinh ? "selected" : "")>Nữ</option>
        </select>
        <span asp-validation-for="GioiTinh" class="text-danger"></span>
    </div>

    <div class="form-group">
        <button type="submit" class="btn btn-primary">Cập Nhật Khách Hàng</button>
        <a href="@Url.Action("Index", "KhachHang", new { area = "Admin" })" class="btn btn-secondary">Hủy</a>
    </div>
</form>
